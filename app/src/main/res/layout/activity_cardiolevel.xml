<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginStart="50dp"
    android:layout_marginLeft="50dp"
    android:layout_marginTop="15dp"
    android:layout_marginEnd="50dp"
    android:layout_marginRight="50dp"
    tools:context=".Cardiolevel">


  <FrameLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      >

    <ImageButton
        android:id="@+id/id"
        android:layout_width="250dp"
        android:layout_height="150dp"
        android:gravity="center_horizontal"
        android:src="@drawable/challenge"
        android:text="@string/cardio"
        android:textAlignment="center"

        android:onClick="cardiolow"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <TextView
        android:layout_width="193dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:capitalize="characters"
        android:fontFamily="@font/aldrich"
        android:onClick="cardiolow"
        android:text="CARDIO LOW"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textSize="34sp"
        android:textStyle="bold"></TextView>

  </FrameLayout>


  <FrameLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      >

    <ImageButton
        android:onClick="cardiomedium"
        android:id="@+id/id3"
        android:layout_width="250dp"
        android:layout_height="150dp"
        android:gravity="center_horizontal"
        android:src="@drawable/challenge"
        android:text="@string/cardio"
        android:textAlignment="center"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <TextView
        android:onClick="cardiomedium"
        android:layout_width="216dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:capitalize="characters"
        android:fontFamily="@font/aldrich"

        android:text="CARDIO MEDIUM"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textSize="34sp"
        android:textStyle="bold"></TextView>

  </FrameLayout>

  <FrameLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content">

    <ImageButton
        android:onClick="cardiohigh"
        android:id="@+id/id4"
        android:layout_width="250dp"
        android:layout_height="150dp"
        android:layout_marginTop="1sp"
        android:gravity="center_horizontal"
        android:src="@drawable/challenge"
        android:text="@string/cardio"

        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <TextView
        android:onClick="cardiohigh"
        android:layout_width="209dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:capitalize="characters"
        android:fontFamily="@font/aldrich"

        android:text="CARDIO HIGH"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textSize="34sp"
        android:textStyle="bold" />

  </FrameLayout>
</LinearLayout>